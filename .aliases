#!/bin/sh
# ~/.aliases

# Dot files git track
alias dots='/usr/bin/git --git-dir=$HOME/.dots/ --work-tree=$HOME'

# Colorful commands
alias ls='ls --color=auto'
alias grep='grep --color=auto'
alias diff='diff --color=auto'
alias sdcv='sdcv --color'

# Verbose
alias t='trash -v'
alias mv='mv -v'
alias cp='cp -v'
alias rm='rm -v'

# Change to specific directories
alias dw='cd $HOME/descargas'
alias ws='cd $HOME/documentos/website'
alias wp='cd $HOME/imagenes/wallpapers'
alias ms='cd $HOME/MEGAsync'
alias cf='cd $HOME/.config'
alias dc='cd $HOME/documentos'
alias bk='cd ..'
alias m1='cd $HOME/mnt/mp1'
alias m2='cd $HOME/mnt/mp2'
alias m3='cd $HOME/mnt/mp3'
alias repos='cd $HOME/documentos/repos'

# Toxic
alias tx='toxic -f .config/tox/lm.tox'

# Music
alias mp='mpd && ncmpcpp'
alias mp3dpl='youtube-dl -x --yes-playlist --audio-format mp3'
