#!/bin/sh

# Manage your session
# Lock screen
# Suspend
# Reboot
# Shutdown

lk() { \
	choice=$(printf "No\\nYes" | dmenu -i -p "Are you sure?" -fn 'IBMPlexSans')
		case "$choice" in
			No) ;;
			Yes) dm-tool lock;;
		esac
	}

ss() { \
	choice=$(printf "No\\nYes" | dmenu -i -p "Are you sure?" -fn 'IBMPlexSans')
		case "$choice" in
			No) ;;
			Yes) dm-tool lock & systemctl suspend;;
		esac
	}

rb() { \
	choice=$(printf "No\\nYes" | dmenu -i -p "Are you sure?" -fn 'IBMPlexSans')
		case "$choice" in
			No) ;;
			Yes) reboot;;
		esac
	}

sd() { \
	choice=$(printf "No\\nYes" | dmenu -i -p "Are you sure?" -fn 'IBMPlexSans')
		case "$choice" in
			No) ;;
			Yes) shutdown now;;
		esac
	}

session=$(printf "Lock\\nSuspend\\nReboot\\nShutdown" | dmenu -i -p "What do you want?" -fn 'IBMPlexSans')

case "$session" in
	Lock) lk;;
	Suspend) ss;;
	Reboot) rb;;
	Shutdown) sd;;
esac
