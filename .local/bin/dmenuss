#!/bin/sh

# this is a script to take screenshots
# dependencies:
# -imagemagick
# -dmenu

ss=$(printf "Full screen\\nCrop screen" | dmenu -i -p "Take a screenshot:" -fn "IBMPlexSans")

case "$ss" in
	Full\ screen) import -window root ~/pictures/ss/ss-$(date '+%y%m%d-%H%M%S').png && notify-send "Screenshot" "Full screen captured and saved at\n~/pictures/ss/ss-$(date '+%y%m%d-%H%M%S')";;
	Crop\ screen) import ~/pictures/ss/ss-$(date '+%y%m%d-%H%M%S').png && notify-send "Screenshot" "Crop screen captured and saved at\n~/pictures/ss/ss-$(date '+%y%m%d-%H%M%S')";;
esac
